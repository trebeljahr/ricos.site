{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@velite": [".velite"],
      "components/collision-detection": [
        "src/components/Demos/collisionDetection"
      ],
      "@components/*": ["src/components/*"],
      "@contexts/*": ["src/contexts/*"],
      "@hooks/*": ["src/hooks/*"],
      "@shaders/*": ["src/shaders/*"],
      "@models/*": ["src/models/*"],
      "@pages/*": ["src/pages/*"],
      "@r4ai/remark-callout": ["node_modules/@r4ai/remark-callout/dist/index"]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    "**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".velite",
    "src/scripts/createRedirects.js",
    "src/lib/generateExcerpts.js",
    "src/scripts/sortedNewsletters.js",
    "next.config.cjss",
    "src/components/Demos/FullscreenShader/withContext"
  ]
}
